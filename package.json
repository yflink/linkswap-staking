{
  "name": "linkswap-staker",
  "version": "1",
  "files": [
    "build"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "compile": "npx hardhat compile",
    "build": "sh build.sh",
    "clean": "rm -rf './build/'",
    "deploy": "node deploy.js",
    "verify": "sh verify.sh",
    "slint": "NODE_OPTIONS=--no-warnings yarn prettier --write 'contracts/**/*.sol'",
    "precompile": "yarn clean && yarn slint",
    "lint": "yarn prettier --write './test/**/*.ts'",
    "qt": "mocha './test/**/*.test.ts'",
    "pretest": "yarn compile && yarn lint",
    "test": "mocha './test/**/*.test.ts'"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.1",
    "@nomiclabs/hardhat-etherscan": "^2.1.0",
    "@nomiclabs/hardhat-truffle5": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.14.2",
    "chai": "^4.2.0",
    "ethereum-waffle": "^3.1.1",
    "ethereumjs-util": "^7.0.5",
    "hardhat": "^2.0.7",
    "mocha": "^8.1.3",
    "prettier": "^2.1.2",
    "prettier-plugin-solidity": "^1.0.0-alpha.59",
    "solc": "0.5.16",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "@uniswap/v2-core": "^1.0.1",
    "dotenv": "^8.2.0",
    "openzeppelin-solidity-2.3.0": "npm:openzeppelin-solidity@2.3.0",
    "truffle": "^5.1.61",
    "truffle-flattener": "^1.5.0",
    "truffle-hdwallet-provider": "^1.0.17",
    "truffle-hdwallet-provider-privkey": "^0.3.0",
    "truffle-plugin-verify": "^0.5.1"
  }
}
